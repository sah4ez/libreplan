<window id="${arg.id}" title="${i18n:helperi18n('Label Types List')}">
    <newdatasortablegrid id="labelTypes" model="@{controller.labelTypes}"
        mold="paging" pageSize="10" sclass="clickable-rows">
        <columns>
            <newdatasortablecolumn label="${i18n:helperi18n('Name')}" sort="auto(lower(name))" sortDirection="ascending" />
            <newdatasortablecolumn label="${i18n:helperi18n('Code')}"/>
            <newdatasortablecolumn label="${i18n:helperi18n('Operations')}" />
        </columns>
        <rows>
            <row self="@{each='labelType'}" value="@{labelType}" onClick="controller.goToEditForm(self.value);">
                <label value="@{labelType.name}" />
                <label value="@{labelType.code}" />
                <hbox>
                    <button sclass="icono" image="/common/img/ico_editar1.png"
                        hoverImage="/common/img/ico_editar.png"
                        tooltiptext="${i18n:helperi18n('Edit')}"
                        onClick="controller.goToEditForm(self.parent.parent.value);"/>

                    <button sclass="icono" image="/common/img/ico_borrar1.png"
                        hoverImage="/common/img/ico_borrar.png"
                        tooltiptext="${i18n:helperi18n('Delete')}"
                        onClick="controller.confirmDelete(self.parent.parent.value);"/>
                </hbox>
            </row>
        </rows>
    </newdatasortablegrid>
    <button label="${i18n:helperi18n('Create')}" onClick="controller.goToCreateForm()"
        sclass="create-button global-action"/>
</window>

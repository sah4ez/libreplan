<window id="${arg.id}" title="${i18n:helperi18n('Job Scheduling List')}">

    <grid id="listJobSchedulings"
          rowRenderer="@{controller.jobSchedulingRenderer}"
          model="@{controller.jobSchedulerConfigurations}"
          mold="paging" pageSize="10" fixedLayout="true">

        <columns>
            <column label="${i18n:helperi18n('Job group')}" />
            <column label="${i18n:helperi18n('Job name')}" />
            <column label="${i18n:helperi18n('Cron expression')}" />
            <column label="${i18n:helperi18n('Next fire time')}" />
            <column label="${i18n:helperi18n('Operations')}" />
        </columns>

    </grid>
    <button label="${i18n:helperi18n('Create')}" onClick="controller.goToCreateForm()" sclass="add-button global-action"/>
</window>

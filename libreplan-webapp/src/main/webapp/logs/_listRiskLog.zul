<window id="listWindow"> 
    <grid id="listRiskLog" model="@{riskLogController.riskLogs}" mold="paging"
        pageSize="15" span="0" sizedByContent="false"
        rowRenderer="@{riskLogController.riskLogsRowRenderer}">
        <columns sizable="true">
            <column label="${i18n:helperi18n('Code')}" sort="auto(lower(code))" />
            <column label="${i18n:helperi18n('Projectname')}" visible="@{logsController.projectNameVisibility}" sort="auto(lower(order))" />
            <column label="${i18n:helperi18n('Probability')}" sort="auto(lower(probability))"/>
            <column label="${i18n:helperi18n('Impact')}" sort="auto(lower(impact))"/>
            <column label="${i18n:helperi18n('Risk score')}" sort="auto(lower(riskScore))"/>
            <column label="${i18n:helperi18n('Status')}" sort="auto(lower(status))"/>
            <column label="${i18n:helperi18n('Description')}" sort="auto(lower(code))"/>
            <column label="${i18n:helperi18n('Date created')}" sclass="date" hflex="min" sort="auto(lower(dateCreated))"/>
            <column label="${i18n:helperi18n('CreatedBy')}" sort="auto(createdBy.loginName)" />
            <column label="${i18n:helperi18n('Counter measures')}" sort="auto(counterMeasures)"/>
            <column label="${i18n:helperi18n('New risk score')}" sort="auto(scoreAfterCM)"/>
            <column label="${i18n:helperi18n('Contingency')}" sort="auto(contingency)"/>
            <column label="${i18n:helperi18n('Responsible')}" sort="auto(responsible)"/>
            <column label="${i18n:helperi18n('ActionWhen')}" sclass="date" hflex="min" sort="auto(lower(actionWhen))"/>
            <column label="${i18n:helperi18n('Notes')}" hflex="min" sort="auto(notes)"/>
            <column label="${i18n:helperi18n('Operations')}" sclass="operations" hflex="min"/>
        </columns>
    </grid>
     <button id="show_create_form" onClick='riskLogController.goToCreateForm()'
             label="${i18n:helperi18n('Create')}" sclass="create-button global-action"/>
</window>

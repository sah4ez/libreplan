<window id="listWindow"> 
    <grid id="listIssueLog" model="@{issueLogController.issueLogs}" mold="paging"
        pageSize="15" span="0" sizedByContent="false"
        rowRenderer="@{issueLogController.issueLogsRowRenderer}">
        <columns sizable="true">
            <column label="${i18n:helperi18n('Code')}" sort="auto(lower(code))" id="code"/>
            <column label="${i18n:helperi18n('Projectname')}" visible="@{logsController.projectNameVisibility}" sort="auto(lower(order))" />
            <column label="${i18n:helperi18n('Type')}" sort="auto(lower(type))" width="9%"/>
            <column label="${i18n:helperi18n('Status')}" sort="auto(lower(status))"/>
            <column label="${i18n:helperi18n('Description')}" sort="auto(lower(description))"/>
            <column label="${i18n:helperi18n('Priority')}" sort="auto(lower(priority))"/>
            <column label="${i18n:helperi18n('Severity')}" sort="auto(lower(severity))"/>
            <column label="${i18n:helperi18n('Date raised')}" sort="auto(lower(dateRaised))"/>
            <column label="${i18n:helperi18n('Created By')}" sort="auto(lower(createdBy.loginName))" hflex="min" />
            <column label="${i18n:helperi18n('Assigned To')}" sort="auto(lower(assignedTo))"/>
            <column label="${i18n:helperi18n('Deadline')}" sort="auto(lower(deadline))"/>
            <column label="${i18n:helperi18n('Date Resolved')}" sort="auto(lower(dateResolved))"/>
            <column label="${i18n:helperi18n('Notes')}" sort="auto(lower(notes))"/>
            <column label="${i18n:helperi18n('Operations')}" sclass="operations" hflex="min"/>
        </columns>
    </grid>
    <button id="show_create_form" onClick='issueLogController.goToCreateForm()'
            label="${i18n:helperi18n('Create')}" sclass="create-button global-action"/>
</window>

<window id="editWindow" height="100%">
    <caption id="caption" sclass="caption-title" />
    <grid id="riskLogGrid" >
        <columns>
            <column width="160px" />
            <column/>
        </columns>
        <rows>
            <row>
                <label value="${i18n:helperi18n('Code')}" />
                <textbox id="riskNumberTextBox" width="636px"
                         value="@{riskLogController.riskLog.code}" disabled="true"/>
            </row>

            <row>
                <label value="${i18n:helperi18n('Project')}" />
                <bandboxSearch id="bdProjectRiskLog" widthBandbox="636px" widthListbox="636px"
                               constraint="no empty:${i18n:helperi18n('cannot be empty')}"
                               finder="OrderBandboxFinder"
                               model="@{riskLogController.orders}"
                               selectedElement="@{riskLogController.order}"/>
            </row>

            <row>
                <label value="${i18n:helperi18n('Status')}" />
                <textbox value="@{riskLogController.riskLog.status}" width="636px" rows="1" multiline="false"
                         maxlength="512"/>
            </row>

            <row>
                <label value="${i18n:helperi18n('Estimations')}" />
                <grid>
                    <columns>
                        <column width="110px"/>
                        <column width="133px"/>
                        <column width="90px"/>
                        <column width="133px"/>
                        <column width="80px"/>
                        <column width="90px"/>
                    </columns>
                    <rows>
                        <row>
                            <label value="${i18n:helperi18n('Probability')}" />
                            <listbox id="listRiskLogProbability" mold="select" rows="1" width="122px"
                                     model="@{riskLogController.lowMediumHighEnums}"
                                     selectedItem="@{riskLogController.riskLog.probability}"
                                     itemRenderer="@{riskLogController.lowMediumHighEnumRenderer}"
                                     onSelect="riskLogController.setUpdateScore()"/>

                            <label value="${i18n:helperi18n('Impact')}" />
                            <listbox id="listRiskLogImpact" mold="select" rows="1" width="122px"
                                     model="@{riskLogController.lowMediumHighEnums}"
                                     selectedItem="@{riskLogController.riskLog.impact}"
                                     itemRenderer="@{riskLogController.lowMediumHighEnumRenderer}"
                                     onSelect="riskLogController.setUpdateScore()" />

                            <label value="${i18n:helperi18n('Risk score')}" />
                            <textbox id="riskScore" value="@{riskLogController.riskLog.riskScore}"
                                     width="75px"
                                     rows="1"
                                     disabled="true" />
                        </row>
                    </rows>
                </grid>
            </row>
            <row>
                <label value="${i18n:helperi18n('Creation info')}" />
                <grid>
                    <columns>
                        <column width="80px"/>
                        <column width="146px"/>
                        <column width="80px"/>
                        <column width="330px"/>
                    </columns>
                    <rows>
                        <row>
                            <label value="${i18n:helperi18n('Date created')}" />
                            <datebox id="dateCreatedBox" width="131px"
                                     constraint="no empty:${i18n:helperi18n('cannot be empty')}"
                                     value="@{riskLogController.dateCreated}" />

                            <label value="${i18n:helperi18n('Created by')}" />
                            <bandboxSearch id="bdUserRiskLog" widthBandbox="315px" widthListbox="340px"
                                           finder="UserBandboxFinder"
                                           model="@{riskLogController.users}"
                                           selectedElement="@{riskLogController.riskLog.createdBy}"/>
                        </row>
                    </rows>
                </grid>
            </row>
            <row>
                <label value="${i18n:helperi18n('Description')}" />
                <textbox id="descriptionNameTextBox" width="636px" rows="3"
                         value="@{riskLogController.riskLog.description}" maxlength="1024"/>
            </row>
            <row>
                <label value="${i18n:helperi18n('Counter measures (CM)')}" />
                <textbox id="counterMeasuresTextbox" width="636px" rows="3"
                         value="@{riskLogController.riskLog.counterMeasures}" maxlength="1024"/>
            </row>
            <row>
                <label value="${i18n:helperi18n('Risk Score After CM')}" />
                <listbox id="listRiskScores" mold="select" rows="1" width="135px"
                         model="@{riskLogController.riskScoreStatesEnums}"
                         selectedItem="@{riskLogController.riskLog.scoreAfterCM}"
                         itemRenderer="@{riskLogController.riskScoreStatesEnumRenderer}" />
            </row>
            <row>
                <label value="${i18n:helperi18n('Contingency')}" />
                <textbox id="contingencyBox" width="636px" rows="3"
                         value="@{riskLogController.riskLog.contingency}" maxlength="1024"/>
            </row>
            <row>
                <label value="${i18n:helperi18n('Prevention')}" />
                <grid>
                    <columns>
                        <column width="80px"/>
                        <column width="146px"/>
                        <column width="80px"/>
                        <column width="330px"/>
                    </columns>
                    <rows>
                        <row>

                            <label value="${i18n:helperi18n('Action When')}" />
                            <datebox id="actionWhenDateBox" width="131px"
                                     constraint="no empty:${i18n:helperi18n('cannot be empty')}"
                                     value="@{riskLogController.actionWhen}" />

                            <label value="${i18n:helperi18n('Responsible')}" />
                            <textbox id="responsibleBox" width="315px" rows="1"
                                     value="@{riskLogController.riskLog.responsible}" maxlength="512"/>
                        </row>
                    </rows>
                </grid>
            </row>
            <row>
                <label value="${i18n:helperi18n('Notes')}" />
                <textbox value="@{riskLogController.riskLog.notes}" width="636px" rows="5" multiline="true"
                         maxlength="1024"/>
            </row>
        </rows>
    </grid>
    <!-- Control buttons -->
    <button onClick="riskLogController.saveAndExit()"
            label="${i18n:helperi18n('Save')}"
            sclass="save-button global-action" />
    <button onClick="riskLogController.saveAndContinue()"
            label="${i18n:helperi18n('Save and Continue')}"
            sclass="save-button global-action" />
    <button onClick="riskLogController.cancelForm()"
            label="${i18n:helperi18n('Cancel')}"
            sclass="cancel-button global-action" />
</window>
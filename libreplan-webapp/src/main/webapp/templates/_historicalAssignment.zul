<zk>
    <zscript><![CDATA[
    historicalAssignment = self;
]]>
    </zscript>
    <vbox>
        <!-- Order element historic assignment to templates-->
        <vbox>
            <vbox id="messagesContainerHistoricAssignment" />
            <panel title="${i18n:helperi18n('Assignment log')}" border="normal">
                <panelchildren>
                    <grid height="200px" sclass="margin-border"
                          model="@{historicalAssignment.orderElementsWithThisAssignedTemplate}">
                        <columns>
                            <column label="${i18n:helperi18n('Project code')}" sort="orderCode" sortDirection="descending"/>
                            <column label="${i18n:helperi18n('Project Name')}" width="250px" sort="auto(name)" sortDirection="descending"/>
                            <column label="${i18n:helperi18n('Task code')}" sort="auto(orderElementCode)" />
                            <column label="${i18n:helperi18n('Task name')}" sort="auto(orderElementName)" />
                            <column label="${i18n:helperi18n('Estimated hours')}" />
                            <column label="${i18n:helperi18n('Worked hours')}" />
                            <column label="${i18n:helperi18n('Operations')}" align="center" width="100px" />
                        </columns>
                        <rows>
                            <row self="@{each='orderElementDTO'}" value="@{orderElementDTO}">
                                <label value="@{orderElementDTO.orderCode}"/>
                                <label value="@{orderElementDTO.name}"/>
                                <label value="@{orderElementDTO.orderElementCode}"/>
                                <label value="@{orderElementDTO.orderElementName}"/>
                                <label value="@{orderElementDTO.estimatedHours}"/>
                                <label value="@{orderElementDTO.workedHours}"/>
                                <button label="${i18n:helperi18n('View')}"
                                        onClick="historicalAssignment.view(self.parent.value);"/>
                            </row>
                        </rows>
                    </grid>
                </panelchildren>
            </panel>
        </vbox>
    </vbox>
</zk>

<window id="${arg.top_id}" title="${i18n:helperi18n('Templates List')}">

    <grid id="listing" model="@{templatesForOrdersController.templates}"
          mold="paging" pageSize="10" sclass="clickable-rows">

        <columns>
            <column label="${i18n:helperi18n('Type')}" sort="auto(type)" />

            <column label="${i18n:helperi18n('Name')}" sort="auto(name)" />

            <column label="${i18n:helperi18n('Delay from beginning (days)')}" sort="auto(startAsDaysFromBeginning)" />

            <column label="${i18n:helperi18n('Days from Beginning to Deadline')}" sort="auto(endAsDaysFromBeginning)" />

            <column label="${i18n:helperi18n('Description')}" sort="auto(description)" />

            <column label="${i18n:helperi18n('Operations')}" />
        </columns>

        <rows>
            <row self="@{each='template'}" value="@{template}"
                 onClick="templatesForOrdersController.goToEditForm(self.value);">

                <label value="@{template.type}" />

                <label value="@{template.name}" />

                <label value="@{template.startAsDaysFromBeginning}" />

                <label value="@{template.deadlineAsDaysFromBeginning}" />

                <label value="@{template.description}" />

                <hbox>
                    <button sclass="icono"
                            image="/common/img/ico_editar1.png"
                            hoverImage="/common/img/ico_editar.png"
                            tooltiptext="${i18n:helperi18n('Edit')}"
                            onClick="templatesForOrdersController.goToEditForm(self.parent.parent.value);"/>

                    <button sclass="icono"
                            image="/common/img/ico_borrar1.png"
                            hoverImage="/common/img/ico_borrar.png"
                            tooltiptext="${i18n:helperi18n('Delete')}"
                            onClick="templatesForOrdersController.confirmDelete(self.parent.parent.value);"/>
                </hbox>
            </row>
        </rows>
    </grid>
</window>
